stages:
  - build

build_distr:
  stage: build
  image:
    name: sp-dk-reg.seaproject.ru/tech-img-01:latest
  script:
    - |
      IFS='/' read -r -a PARTS <<< "$CI_PROJECT_PATH"
      for i in "${!PARTS[@]}"; do
        if [[ "${PARTS[$i]}" == "deploy" ]]; then
          DEPLOY_INDEX=$i
          break
        fi
      done
      [ -z "$DEPLOY_INDEX" ] && exit 1
      TARGET_PARTS=("${PARTS[@]:0:$DEPLOY_INDEX}")
      DIR_NAME=$(IFS=_ ; echo "${TARGET_PARTS[*]}")
      mkdir -p "$DIR_NAME"
      cp -r ./* "$DIR_NAME"/
