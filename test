#!/bin/bash

RTSP_URL="rtsp://login:pass@ip/stream"
OUT_DIR="/tmp/camshots"
mkdir -p "$OUT_DIR"

while true; do
    TIMESTAMP=$(date +%s)
    ffmpeg -rtsp_transport tcp -i "$RTSP_URL" -vframes 1 -q:v 2 "$OUT_DIR/snapshot.jpg" -y -loglevel quiet
    sleep 10
done


<!DOCTYPE html>
